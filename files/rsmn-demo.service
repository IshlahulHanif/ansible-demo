[Unit]
Description=Risk Tech Academy ansible demo service
ConditionPathExists=/usr/ansible-demo/risk-tech-ansible-server-demo
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/usr/ansible-demo/risk-tech-ansible-server-demo
ExecStart=/usr/ansible-demo/risk-tech-ansible-server-demo/rsmn-demo
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=rsmndemoservice

[Install]
WantedBy=multi-user.target